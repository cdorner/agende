#!/usr/bin/env node
var debug = require('debug')('app');
var app = require('../app');

var schemas = require('../routes/agendaSchema');

app.set('port', process.env.npm_package_config_port || 8888);
schemas.set('db', process.env.npm_package_config_db || 'mongodb://localhost/appointments');
schemas.set('debug', process.env.npm_package_config_dbdebug || false);
schemas.init();

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});
